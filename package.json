{
  "name": "account",
  "version": "2.0.0",
  "description": "Microservice responsible for user management and authentication on the OCARIoT platform.",
  "main": "dist/server.js",
  "scripts": {
    "build": "gulp build",
    "build:doc": "typedoc --options typedoc.json",
    "start": "node dist/server.js",
    "start:dev": "gulp dev",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc --clean --reporter=text-summary mocha --opts test/mocha.opts test/**/*.spec.ts",
    "test:unit": "nyc --clean --all --reporter=text-summary mocha --opts test/mocha.opts test/unit/**/*.spec.ts",
    "test:integration": "nyc --clean --all --reporter=text-summary mocha --opts test/mocha.opts test/integration/**/*.spec.ts",
    "test:single": "mocha --opts test/mocha.opts",
    "test:cov": "nyc --clean --all --reporter=html --reporter=text mocha --opts test/mocha.opts test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocariot/account.git"
  },
  "keywords": [
    "microservice",
    "account",
    "authentication"
  ],
  "author": "NUTES/UEPB",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ocariot/account/issues"
  },
  "homepage": "https://github.com/ocariot/account#readme",
  "nyc": {
    "include": [
      "**/*.tsx",
      "**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/*",
      "config/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@ocariot/rabbitmq-client-node": "^1.0.2",
    "amqp-ts": "git+https://github.com/nutes-uepb/amqp-ts",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "helmet": "^3.18.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "ip-allowed": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "mongoose-encryption": "^2.0.2",
    "mongoose-field-encryption": "^2.3.4",
    "morgan": "^1.9.1",
    "pem": "^1.14.2",
    "query-strings-parser": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.8",
    "@types/morgan": "^1.7.35",
    "@types/swagger-ui-express": "^3.0.1",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.4.2",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^5.0.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.4.5"
  }
}
